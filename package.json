{
  "name": "github-pixel-profile",
  "version": "0.0.3",
  "homepage": "https://github.com/LuciNyan/github-pixel-profile",
  "bugs": {
    "url": "https://github.com/LuciNyan/github-pixel-profile/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/LuciNyan/github-pixel-profile.git"
  },
  "scripts": {
    "start": "concurrently \"pnpm dev:vercel\" \"pnpm dev:pixel-profile\"",
    "dev:vercel": "vercel dev",
    "dev:pixel-profile": "turbo dev --filter=pixel-profile",
    "build": "pnpm --filter \"pixel-profile\" run build",
    "release": "bumpp --commit --push --tag -r && pnpm publish ./packages/pixel-profile --access=public",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky install",
    "eslint:fix": "eslint --fix -c .eslintrc.json --ext .ts,.tsx packages/pixel-profile/src"
  },
  "type": "module",
  "author": "LuciNyan",
  "license": "MIT",
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "prettier": "^3.1.1",
    "turbo": "^1.6.3",
    "@vercel/node": "^3.0.18",
    "concurrently": "^7.3.0"
  },
  "dependencies": {
    "pixel-profile": "workspace:*",
    "ts-known": "^0.1.3",
    "bumpp": "^9.3.0"
  },
  "lint-staged": {
    "*.{js,css,md}": "prettier --write"
  },
  "packageManager": "pnpm@8.7.0",
  "engines": {
    "node": ">=18.17.0"
  }
}
